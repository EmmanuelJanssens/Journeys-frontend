{
    "parser": "vue-eslint-parser",
    "root": true,
    "extends": [
        "plugin:vue/essential",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "@vue/eslint-config-typescript"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "semicolons": true,
                "tabWidth": 4,
                "useTabs": false,
                "printWidth": 120,
                "endOfLine": "auto",
                "singleQuote": false,
                "trailingComma": "none",
                "bracketSpacing": true,
                "arrowParens": "always",
                "bracketSameLine": true
            }
        ]
    },
    "globals": {
        "google": "readonly",
        "maplibregl": "readonly"
    }
}
